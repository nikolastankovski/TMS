@model TMS.Domain.DTO.DTO_Reference

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reference</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReferenceTypeId" class="control-label"></label>
                <input asp-for="ReferenceTypeId" class="form-control" />
                <span asp-validation-for="ReferenceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div>
                @for (int i = 0; i < Model.Languages.Count; i++)
                {
                    <div class="row">
                        <input type="hidden" asp-for="Languages[i].LanguageID">
                        <div class="col-3">
                            <div class="form-group">
                                <p>@Model.Languages[i].DisplayName</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Languages[i].Description" class="control-label"></label>
                                <input asp-for="Languages[i].Description" class="form-control" />
                                <span asp-validation-for="Languages[i].Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
